- model_class = Grupo
.page-header
  %h1 Datos del Grupo

%p
  %strong= model_class.human_attribute_name(:nombre) + ':'
  %br
  = @grupo.nombre
%p
  %strong= model_class.human_attribute_name(:descripcion) + ':'
  %br
  = @grupo.descripcion

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), grupos_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_grupo_path(@grupo), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), grupo_path(@grupo), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
