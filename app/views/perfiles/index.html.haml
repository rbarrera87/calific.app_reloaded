- model_class = Perfil
.page-header
%h3.text-primary.text-center
  =t '.title', default: [:'helpers.titles.index', 'index %{model}'], model: model_class.model_name.human.pluralize
%table.table.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nombre)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    %tr
      %td= @perfil.id
      %td= @perfil.nombre
      %td
        = link_to t('.edit', default: t("helpers.links.edit")), edit_perfile_path(@perfil), class: 'btn btn-mini'
        = link_to t('.destroy', default: t("helpers.links.destroy")), perfile_path(@perfil), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_perfile_path, class: 'btn btn-primary'
