<!DOCTYPE html>
<html>
<head>
  <title>
  	Calific.App
  </title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
	<body>
		<div class="container-fluid">
			<div class="row-fluid" id="encabezado">
				<div class="navbar navbar-fixed-top">
				  <div class="navbar-inner">
				    <div class="container">
				      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				      </a>
				      <a class="brand">
				      	 Calific.App
				      </a>
				      <div class="nav-collapse">
				        <ul class="nav">
				          <li><%= link_to t('.link', default: t("helpers.links.subjects")), asignaturas_path %></li>
				          <li><%= link_to t('.link', default: t("helpers.links.career")), carreras_path %></li>
				          <li><%= link_to t('.link', default: t("helpers.links.grades")), grados_path %></li>
				          <li><%= link_to t('.link', default: t("helpers.links.groups")), grupos_path %></li>
				        </ul>
				          <li class="dropdown pull-right">
							 <a href="#" data-toggle="dropdown" class="dropdown-toggle"><%=t '.title', default: [:'helpers.titles.opciones']%><strong class="caret"></strong></a>
							<ul class="dropdown-menu">
								<li>
									<a href="#"><%=t '.title', default: [:'helpers.titles.profile'] %></a>
								</li>
								<li>
									<%= link_to t('.link', default: t("helpers.links.log_out")), destroy_user_session_path(), method: :delete%>
								</li>
							</ul>
						</li>
				      </div>
				    </div>
				  </div>
				</div>



			</div>
			<div class="row">
				<div class="span12">
					<%= yield %>
				</div>
			</div>
		</div>
	</body>
</html>
