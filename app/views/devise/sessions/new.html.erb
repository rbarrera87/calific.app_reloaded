<font size="90">CALIFICAPP</font>
<h2>Iniciar sesión</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, placeholder: 'Correo' %>
    <%= f.input :password, :required => false,placeholder: 'Contraseña' %>
    
  </div>

  <div class="button">
    <%= f.button :submit, "Entrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
