- model_class = Grado
.page-header
  %h3.text-primary.text-center
    =t '.title', default: [:'helpers.titles.show', 'show %{model}'], model: model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nombre) + ':'
  %br
  = @grado.nombre
%p
  %strong= model_class.human_attribute_name(:descripci√≥n) + ':'
  %br
  = @grado.descripcion

.form-actions
  = link_to t('.back', default: t("helpers.links.back")), grados_path, class: 'btn'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_grado_path(@grado), class: 'btn'
  = link_to t('.destroy', default: t("helpers.links.destroy")), grado_path(@grado), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
