- model_class = Encuesta
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nombre)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @encuestas.each do |encuesta|
      %tr
        %td= link_to encuesta.id, encuesta_path(encuesta)
        %td= encuesta.nombre
        %td= encuesta.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_encuesta_path(encuesta), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), encuesta_path(encuesta), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_encuesta_path, :class => 'btn btn-primary'
