- model_class = Vinculacion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:carrera_id) + ':'
  %br
  = @vinculacion.carrera.nombre
%p
  %strong= model_class.human_attribute_name(:perfil_id) + ':'
  %br
  = @vinculacion.perfil.nombre
%p
  %strong= model_class.human_attribute_name(:numero_control) + ':'
  %br
  = @vinculacion.perfil.numero_control
%p
  %strong= model_class.human_attribute_name(:nombre_proyecto) + ':'
  %br
  = @vinculacion.nombre_proyecto

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), vinculaciones_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_vinculacion_path(@vinculacion), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), vinculacion_path(@vinculacion), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  = link_to "carta (PDF)", vinculacion_path(@vinculacion, :format => "pdf")
