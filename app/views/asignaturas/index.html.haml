- model_class = Asignatura
.page-header
%h3.text-primary.text-center
  Lista de asignaturas
%table.table.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th= model_class.human_attribute_name(:clave)
      %th= model_class.human_attribute_name(:Nombre)
      %th= model_class.human_attribute_name(:DescripciÃ³n)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @asignaturas.each do |asignatura|
      %tr
        %td= link_to asignatura.id, asignatura_path(asignatura)
        %td= asignatura.nombre
        %td= asignatura.descripcion
        %td
          = link_to t('.edit', :default => t("helpers.links.Editar")), edit_asignatura_path(asignatura), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.Eliminar")), asignatura_path(asignatura), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.Agregar")), new_asignatura_path, :class => 'btn btn-primary'
