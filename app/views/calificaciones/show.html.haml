- model_class = Calificacion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize
%table.table.table-striped
  %thead
    %tr

      %th= model_class.human_attribute_name(:primer_parcial) + ':'
      %th= model_class.human_attribute_name(:segundo_parcial) + ':'
      %th= model_class.human_attribute_name(:tercer_parcial) + ':'
      %th= model_class.human_attribute_name(:calificacion_final) + ':'
  %tbody
    %tr

      %td= @calificacion.primer_parcial
      %td= @calificacion.segundo_parcial
      %td= @calificacion.tercer_parcial
      %td= @cali

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), calificaciones_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_calificacion_path(@calificacion), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), calificacion_path(@calificacion), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
