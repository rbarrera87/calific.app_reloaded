- model_class = Calificacion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:calificacion_ordinaria) + ':'
  %br
  = @calificacion.calificacion_ordinaria
%p
  %strong= model_class.human_attribute_name(:calificacion_remedial) + ':'
  %br
  = @calificacion.calificacion_remedial
%p
  %strong= model_class.human_attribute_name(:calificacion_extraordinaria) + ':'
  %br
  = @calificacion.calificacion_extraordinaria
%p
  %strong= model_class.human_attribute_name(:calificacion_final) + ':'
  %br
  = @calificacion.calificacion_final

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), calificaciones_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_calificacion_path(@calificacion), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), calificacion_path(@calificacion), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
