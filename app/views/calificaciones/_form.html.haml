= simple_form_for @calificacion, :html => { :class => 'form-horizontal' } do |f|
  = f.input :primer_parcial
  = f.input :segundo_parcial
  = f.input :tercer_parcial
  = f.input :calificacion_final
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), calificaciones_path, :class => 'btn'
