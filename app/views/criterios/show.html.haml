- model_class = Criterio
.page-header
  %h3.text-primary.text-center
    =t '.title', default: [:'helpers.titles.show', 'show %{model}'], model: model_class.model_name.human.titleize
%p
  %strong= model_class.human_attribute_name(:nombre) + ':'
  %br
  = @criterio.nombre
%p
  %strong= model_class.human_attribute_name(:descripci√≥n) + ':'
  %br
  = @criterio.descripcion
%p
  %strong= model_class.human_attribute_name(:estado) + ':'
  %br
  = @criterio.estado

.form-actions
  = link_to t('.back', default: t("helpers.links.back")), criterios_path, class: 'btn btn-default btn-sm active'
  = link_to t('.edit', default:t("helpers.links.edit")), edit_criterio_path(@criterio), class: 'btn btn-success btn-sm active'
  = link_to t('.destroy', default: t("helpers.links.destroy")), criterio_path(@criterio), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger btn-sm active'
  = link_to t('.new', default: t("helpers.links.new")), new_criterio_path, class: 'btn btn-info btn-sm active'

