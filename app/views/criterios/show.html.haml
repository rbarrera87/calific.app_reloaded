- model_class = Criterio
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:descripcion) + ':'
  %br
  = @criterio.descripcion


.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), criterios_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_criterio_path(@criterio), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), criterio_path(@criterio), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
