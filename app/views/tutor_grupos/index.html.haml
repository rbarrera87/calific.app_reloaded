- model_class = TutorGrupo
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:Carrera)
      %th= model_class.human_attribute_name(:Grado)
      %th= model_class.human_attribute_name(:Grupo)
      %th= model_class.human_attribute_name(:Nombre)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tutor_grupos.each do |tutor_grupo|
      %tr
        %td= link_to tutor_grupo.id, tutor_grupo_path(tutor_grupo)
        %td= tutor_grupo.carrera.nombre
        %td= tutor_grupo.grado.nombre
        %td= tutor_grupo.grupo.nombre
        %td= tutor_grupo.perfil.nombre
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_tutor_grupo_path(tutor_grupo), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), tutor_grupo_path(tutor_grupo), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_tutor_grupo_path, :class => 'btn btn-primary'
