- model_class = TutorGrupo
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:carrera_id) + ':'
  %br
  = @tutor_grupo.carrera_id
%p
  %strong= model_class.human_attribute_name(:grado_id) + ':'
  %br
  = @tutor_grupo.grado_id
%p
  %strong= model_class.human_attribute_name(:grupo_id) + ':'
  %br
  = @tutor_grupo.grupo_id
%p
  %strong= model_class.human_attribute_name(:perfil_id) + ':'
  %br
  = @tutor_grupo.perfil_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tutor_grupos_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_tutor_grupo_path(@tutor_grupo), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), tutor_grupo_path(@tutor_grupo), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
