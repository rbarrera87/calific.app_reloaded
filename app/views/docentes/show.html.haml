- model_class = Docente
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:perfil_id) + ':'
  %br
  = @docente.perfil_id
%p
  %strong= model_class.human_attribute_name(:carrera_id) + ':'
  %br
  = @docente.carrera_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), docentes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_docente_path(@docente), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), docente_path(@docente), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
