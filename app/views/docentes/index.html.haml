- model_class = Docente
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:perfil_id)
      %th= model_class.human_attribute_name(:carrera_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @docentes.each do |docente|
      %tr
        %td= link_to docente.id, docente_path(docente)
        %td= docente.perfil.nombre
        %td= docente.carrera.nombre
        %td= docente.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_docente_path(docente), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), docente_path(docente), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_docente_path, :class => 'btn btn-primary'
