- model_class = Indicador
= simple_form_for @indicador, :html => { :class => 'form-horizontal' } do |f|
  = f.input :nombre
  = f.input :descripcion
  = f.input :estado
  = f.input :type
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), indicadores_path, :class => 'btn'
