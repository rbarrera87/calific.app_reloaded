- model_class = Consejero
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:carrera_id) + ':'
  %br
  = @consejero.carrera.nombre
%p
  %strong= model_class.human_attribute_name(:grado_id) + ':'
  %br
  = @consejero.grado.nombre
%p
  %strong= model_class.human_attribute_name(:grupo_id) + ':'
  %br
  = @consejero.grupo.nombre
%p
  %strong= model_class.human_attribute_name(:perfil_id) + ':'
  %br
  = @consejero.perfil.nombre

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), consejeros_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_consejero_path(@consejero), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), consejero_path(@consejero), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
