- model_class = Cuatrimestre
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:nombre) + ':'
  %br
  = @cuatrimestre.nombre

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), cuatrimestres_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_cuatrimestr_path(@cuatrimestre), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), cuatrimestr_path(@cuatrimestre), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
