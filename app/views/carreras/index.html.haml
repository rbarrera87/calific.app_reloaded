      %th=t '.actions', :default => t("helpers.Acciones")
  %tbody
    - @carreras.each do |carrera|
      %tr
        %td= link_to carrera.id, carrera_path(carrera)
        %td= carrera.nombre
        %td= carrera.descripcion
        %td
          = link_to t('.edit', :default => t("helpers.links.Editar")), edit_carrera_path(carrera), :class => 'btn btn-mini'
