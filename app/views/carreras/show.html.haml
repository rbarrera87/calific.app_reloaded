- model_class = Carrera
.page-header
  %h3.text-primary.text-center
    =t '.title', default: [:'helpers.titles.show', 'show %{model}'], model: model_class.model_name.human.titleize
%p
  %strong= model_class.human_attribute_name(:nombre) + ':'
  %br
  = @carrera.nombre
%p
  %strong= model_class.human_attribute_name(:descripcion) + ':'
  %br
  = @carrera.descripcion

.form-actions
  = link_to t('.back', default: t("helpers.links.back")), carreras_path, class: 'btn'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_carrera_path(@carrera), class: 'btn'
  = link_to t('.destroy', default: t("helpers.links.destroy")), carrera_path(@carrera), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
