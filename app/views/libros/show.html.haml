- model_class = Libro
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:Nombre) + ':'
  %br
  = @libro.nombre
%p
  %strong= model_class.human_attribute_name(:Editorial) + ':'
  %br
  = @libro.editorial
%p
  %strong= model_class.human_attribute_name(:Autor) + ':'
  %br
  = @libro.autor
%p
  %strong= model_class.human_attribute_name(:categorÃ­a) + ':'
  %br
  = @libro.categoria

.form-actions
  = link_to t('.back', default: t("helpers.links.back")), libros_path,  class: 'btn btn-default btn-sm active'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_libro_path(@libro), class: 'btn btn-success btn-sm active'
  = link_to t('.destroy', default: t("helpers.links.destroy")), libro_path(@libro), method: "delete", :data => { :confirm => t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger btn-sm active'
  = link_to t('.new', default: t("helpers.links.new")), new_libro_path, class: 'btn btn-info btn-sm active'

