- model_class = Materia
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nombre)
      %th= model_class.human_attribute_name(:descripcion)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @materias.each do |materia|
      %tr
        %td= link_to materia.id, materia_path(materia)
        %td= materia.nombre
        %td= materia.descripcion
        %td=l materia.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_materia_path(materia), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), materia_path(materia), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_materia_path, :class => 'btn btn-primary'
