- model_class = Tutoria
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:mes1) + ':'
  %br
  = @tutoria.mes1
%p
  %strong= model_class.human_attribute_name(:mes2) + ':'
  %br
  = @tutoria.mes2
%p
  %strong= model_class.human_attribute_name(:mes3) + ':'
  %br
  = @tutoria.mes3
%p
  %strong= model_class.human_attribute_name(:mes4) + ':'
  %br
  = @tutoria.mes4
%p
  %strong= model_class.human_attribute_name(:grado_id) + ':'
  %br
  = @tutoria.grado_id
%p
  %strong= model_class.human_attribute_name(:grupo_id) + ':'
  %br
  = @tutoria.grupo_id
%p
  %strong= model_class.human_attribute_name(:perfil_id) + ':'
  %br
  = @tutoria.perfil_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tutorias_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_tutoria_path(@tutoria), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), tutoria_path(@tutoria), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
