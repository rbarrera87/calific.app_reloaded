- model_class = Tutoria
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:perfil_id) + ':'
  %br
  = @tutoria.perfil.nombre
%p
  %strong= model_class.human_attribute_name(:grado_id) + ':'
  %br
  = @tutoria.grado.nombre
%p
  %strong= model_class.human_attribute_name(:grupo_id) + ':'
  %br
  = @tutoria.grupo.nombre
%p
  %strong= model_class.human_attribute_name(:enero) + ':'
  %br
  = @tutoria.mes1
%p
  %strong= model_class.human_attribute_name(:febrero) + ':'
  %br
  = @tutoria.mes2
%p
  %strong= model_class.human_attribute_name(:marzo) + ':'
  %br
  = @tutoria.mes3
%p
  %strong= model_class.human_attribute_name(:marzo) + ':'
  %br
  = @tutoria.mes4

.form-actions
  = link_to t('.back', default: t("helpers.links.back")), tutorias_path, class: 'btn btn-default btn-sm active'
  = link_to t('.edit', default:t("helpers.links.edit")), edit_tutoria_path(@tutoria), class: 'btn btn-success btn-sm active'
  = link_to t('.destroy', default: t("helpers.links.destroy")), tutoria_path(@tutoria), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger btn-sm active'
  = link_to t('.new', default: t("helpers.links.new")), new_tutoria_path, class: 'btn btn-info btn-sm active'

