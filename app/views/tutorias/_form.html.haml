= simple_form_for @tutoria, :html => { :class => 'form-horizontal' } do |f|
  %br/
  %br/
  = f.label 'Grado:'
  = f.collection_select :grado_id, Grado.all, :id, :nombre
  %br/
  %br/
  = f.label 'Grupo:'
  = f.collection_select :grupo_id, Grupo.all, :id, :nombre
  %br/
  %br/
  = f.label 'Nombre del Tutor:'
  = f.collection_select :perfil_id, Perfil.all, :id, :nombre
  %br/
  %br/
  = f.input :mes1, label: 'Enero:'
  = f.input :mes2, label: 'Febrero:'
  = f.input :mes3, label: 'Marzo:'
  = f.input :mes4, label: 'Abril:'
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tutorias_path, :class => 'btn'
